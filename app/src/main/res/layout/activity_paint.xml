<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaintActivity" >
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/paint_toolbar"
        android:elevation="2dp">
        >
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsHolder"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/paint_toolbar"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            >
            <SeekBar
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:id="@+id/penSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtPenSize"
                android:text="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="4dp"
            android:gravity="end"
            >
            <ImageButton
                android:id="@+id/btnEraser"
                android:background="@color/white"
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_eraser"/>

            <ImageButton
                android:id="@+id/btnColor"
                android:background="@color/white"
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_color" />
        </LinearLayout>
    </LinearLayout>

    <com.kyanogen.signatureview.SignatureView
        android:id="@+id/signature_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:backgroundColor="#ffffff"
        app:enableSignature="true"
        app:layout_constraintTop_toBottomOf="@+id/optionsHolder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:penColor="#000000"
        app:penSize="5dp" />
