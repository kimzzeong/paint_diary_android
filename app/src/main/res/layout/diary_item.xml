<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diary_cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:cardCornerRadius="5dp"
        android:elevation = "10dp"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#FAFAFA"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                card_view:layout_constraintTop_toTopOf="@+id/paint_toolbar"
                card_view:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/round_layout"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_marginRight="8dp"
                    android:id="@+id/favorite_icon"
                    card_view:tint="#EC562B" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_text"
                    android:text="0"
                    android:textSize="15dp"
                    android:layout_marginRight="8dp"
                    />
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_baseline_comment_24"
                    android:layout_marginRight="8dp"
                    android:id="@+id/comments_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments_text"
                    android:text="0"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/diary_image"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:elevation="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diary_title"
                app:layout_constraintLeft_toLeftOf="@id/diary_image"
                app:layout_constraintTop_toBottomOf="@id/diary_image"
                android:textSize="20dp"
                android:text="제목"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diary_writer"
                app:layout_constraintLeft_toLeftOf="@id/diary_title"
                app:layout_constraintTop_toBottomOf="@id/diary_title"
                android:textSize="15dp"
                android:text="글쓴이"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>