<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileModifyActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_toolbar"
        android:elevation="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_photo_layout"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@color/sub"
        android:orientation="vertical">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/profile_photo"
            android:background="@color/white"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_title"
        app:layout_constraintTop_toBottomOf="@id/profile_photo_layout"
        android:text="닉네임"
        app:layout_constraintLeft_toLeftOf="@id/profile_photo_layout"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textSize="18dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname_title"
        app:layout_constraintLeft_toLeftOf="@id/nickname_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_title"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/profile_nickname"
        android:text="소개글"
        app:layout_constraintLeft_toLeftOf="@id/profile_photo_layout"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_intro"
        app:layout_constraintTop_toBottomOf="@+id/intro_title"
        app:layout_constraintLeft_toLeftOf="@id/nickname_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>