<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileModifyActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_toolbar">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/profile_photo"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_title"
        app:layout_constraintTop_toBottomOf="@id/profile_photo"
        android:text="닉네임"
        app:layout_constraintLeft_toLeftOf="@id/profile_photo"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname_title"
        app:layout_constraintLeft_toLeftOf="@id/nickname_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_title"
        app:layout_constraintTop_toBottomOf="@id/profile_nickname"
        android:text="소개글"
        app:layout_constraintLeft_toLeftOf="@id/profile_photo"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_intro"
        app:layout_constraintTop_toBottomOf="@+id/intro_title"
        app:layout_constraintLeft_toLeftOf="@id/nickname_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>