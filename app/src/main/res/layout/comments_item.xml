<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comments_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comments_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray"
            android:src="@drawable/basic_profile"/>
        <TextView
            android:id="@+id/comments_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/comments_profile"
            app:layout_constraintLeft_toRightOf="@id/comments_profile"
            android:text="닉네임"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/comment_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/comments_nickname"
            app:layout_constraintLeft_toLeftOf="@+id/comments_nickname"
            android:text="작성시간"/>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/comment_datetime"
            app:layout_constraintLeft_toLeftOf="@id/comment_datetime"
            android:text="댓글내용"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:linksClickable="true"
            android:autoLink="web"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:backgroundTint="@null"
            android:background="#d3d3d3"/>

        <ImageButton
            android:id="@+id/setComments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/comments_nickname"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recomments_list"
        app:layout_constraintTop_toBottomOf="@+id/comments_layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>